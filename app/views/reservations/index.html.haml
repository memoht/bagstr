- provide(:title, 'All Reservations' )
.row
  .small-12.medium-12.columns
    - if @open_lockers.any?
      = link_to 'New Reservation', new_reservation_path, class: 'success button'
    - else
      .no_vacancy_flag
        %h2= "No open lockers. We are full"
    %hr
    %table
      %thead
        %tr
          %th status
          %th confirmation_no
          %th guest_name
          %th size_code
          %th actions
      %tbody
        = render(@reservations)
